<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/IVdisplay"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:src="@drawable/waterdrop" />

    <Button
        android:id="@+id/BsetWallpaper"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Set Image to background" />

    <HorizontalScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/IVimage1"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:padding="10dp"
                android:contentDescription="Bird"                 
                android:src="@drawable/bird" />

            <ImageView
                android:id="@+id/IVimage2"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:padding="10dp"
                android:contentDescription="Butterfly"                 
                android:src="@drawable/butterfly" />

            <ImageView
                android:id="@+id/IVimage3"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:padding="10dp"
                android:contentDescription="Cat"                 
                android:src="@drawable/cat" />

            <ImageView
                android:id="@+id/IVimage4"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:padding="10dp"
                android:contentDescription="Cow"                 
                android:src="@drawable/cow" />

            <ImageView
                android:id="@+id/IVimage5"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:padding="10dp"
                android:contentDescription="Dog"                 
                android:src="@drawable/dog" />

            <ImageView
                android:id="@+id/IVimage6"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:padding="10dp"
                android:contentDescription="Flowers"                 
                android:src="@drawable/flowers" />

            <ImageView
                android:id="@+id/IVimage7"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:padding="10dp"
                android:contentDescription="Horse"                 
                android:src="@drawable/horse" />

            <ImageView
                android:id="@+id/IVimage8"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:padding="10dp"
                android:contentDescription="Ladybug"                 
                android:src="@drawable/ladybug" />

            <ImageView
                android:id="@+id/IVimage9"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:padding="10dp"
                android:contentDescription="Pigs"                 
                android:src="@drawable/pigs" />

            <ImageView
                android:id="@+id/IVimage10"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:padding="10dp"
                android:contentDescription="Sheep"                 
                android:src="@drawable/sheep" />

            <ImageView
                android:id="@+id/IVimage11"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:padding="10dp"
                android:contentDescription="Turtle"                 
                android:src="@drawable/turtle" />
        </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>